%% Ordinary list with --- items
\newlength{\itemitemsep}
\setlength{\itemitemsep}{0mm}
\newenvironment{itemlist}[1][---]{%
 \begin{list}{#1}{%
  \settowidth{\labelwidth}{#1}
  \settowidth{\labelsep}{~}
  \setlength{\leftmargin}{0pt}
  \setlength{\itemindent}{1.5em}
  \addtolength{\itemindent}{\labelwidth}
  \addtolength{\itemindent}{\labelsep}
  \setlength{\listparindent}{\parindent}
%
  \setlength{\itemsep}{\itemitemsep}
  \setlength{\parsep}{0mm}
  \setlength{\topsep}{0mm}
  \setlength{\partopsep}{0mm}
  }
 }
{\end{list}}

% Simple list --- sequence of paragraphs
\newlength{\simpleitemsep}
\setlength{\simpleitemsep}{0mm}
\newenvironment{simplelist}{%
 \begin{list}{}{%
  \setlength{\labelwidth}{0pt}
  \setlength{\labelsep}{0pt}
  \setlength{\leftmargin}{0pt}
  \setlength{\itemindent}{\parindent}
  \addtolength{\itemindent}{\labelwidth}
  \addtolength{\itemindent}{\labelsep}
  \setlength{\listparindent}{\parindent}
%
  \setlength{\itemsep}{\simpleitemsep}
  \setlength{\parsep}{0mm}
  \setlength{\topsep}{0mm}
  \setlength{\partopsep}{0mm}
  }
 }
{\end{list}}

%% List enumerated by arabic numbers
\newlength{\enumitemsep}
\setlength{\enumitemsep}{0mm}
\newcounter{enumlisti}
\newcommand{\enumlistlabelfont}{\rm}
\def\theenumlisti{\arabic{enumlisti}}
\newenvironment{enumlist}[1][)]{%
 \begin{list}{\raggedright{\enumlistlabelfont\theenumlisti#1}}{%
  \setcounter{enumlisti}{0}
  \settowidth{\labelwidth}{\enumlistlabelfont\arabic{enumlisti}#1}
  \settowidth{\labelsep}{~}
  \setlength{\leftmargin}{0pt}
  \setlength{\itemindent}{\parindent}
  \addtolength{\itemindent}{\labelwidth}
  \addtolength{\itemindent}{\labelsep}
  \setlength{\listparindent}{\parindent}
%
  \setlength{\itemsep}{\enumitemsep}
  \setlength{\parsep}{0mm}
  \setlength{\topsep}{0mm}
  \setlength{\partopsep}{0mm}
  \usecounter{enumlisti}
  }
 }
{\end{list}}


